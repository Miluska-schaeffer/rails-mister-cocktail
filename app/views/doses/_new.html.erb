 <%= simple_form_for [@cocktail, Dose.new] do |f| %>
   <h2> How do you mix it? </h2>
   <div class="form-inputs">
     <%= f.association :ingredient, label: "Ingredient"%>
     <%= f.input :description, label: "How much?" %>
   </div>
   <div class="form-actions btn btn-primary">
    <%= f.button :submit, class: "btn-primary" %>
  </div>
<% end %>

