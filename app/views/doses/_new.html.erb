<div class="container my-5 ">

 <%= simple_form_for [@cocktail, Dose.new] do |f| %>
 <div class="form-inputs">
   <%= f.association :ingredient, label: "Add an ingredient"%>
   <%= f.input :description, label: "How much?" %>

 </div>

 <div class="form-actions btn btn-primary">
  <%= f.button :submit %>
</div>

<% end %>
</div>
