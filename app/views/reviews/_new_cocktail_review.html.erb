<div class="new-review-wrapper">
  <div class="item">
    <div class="new-review-button ">
      <h3>Have you tried this drink? Leave a Review </h3>
    </div>
    <div class="innerText">
       <%= simple_form_for [@cocktail, @review] do |f| %>
       <div class="form-inputs">
          <%= f.input :rating %>
          <%= f.input :content, label: "How did you find this cocktail? " %>
       </div>
       <div class="form-actions btn btn-primary">
          <%= f.button :submit, class: "btn-primary" %>
        </div>
      <% end %>
    </div>
  </div>
</div>

