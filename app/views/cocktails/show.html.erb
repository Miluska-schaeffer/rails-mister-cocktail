
<div class="cock-banner" style="background-image: radial-gradient(circle closest-side,rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(<%= asset_url('bar-banner.jpg')%>)">
  <h2> <%= @cocktail.name %> </h2>
</div>

<div class="container my-5">
  <div class="row justify-content-between">
    <div class="col-6 dose-col">

      <% if @dose.nil? %>
          <h2>nothing yet</h2>
        <% else %>
          <%= render 'doses/dose_info' %>
        <% end %>
        <h2> How do you mix it? </h2>
      <%= render 'doses/new' %>
    </div>
<!--   <p id="notice"><%= notice %></p>
 -->
    <div class="col-5 picture-col">
      <div class="color-backdrop-2"></div>
      <div class="cocktail-pic">
        <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%= cl_image_path @cocktail.photo.key, height: 300, width: 400, crop: :fill %>')">

        </div>
      </div>
      <div class="info-cock mt-3">
          <div class="title">
            <div class="color-backdrop text-center">
            <i class="fas fa-quote-right"></i>
            <h1> <%= @cocktail.content %></h1>
          </div>
          <h2> <%= @cocktail.category %> </h2>
      </div>


    </div>
</div>

<div class="row">
  <div class="">
<% if @review.nil? %>
<h2> no reviews yet</h2>
<% else %>
<%= render 'reviews/review_info' %>
<% end %>
</div>

<div class="">

<h3>Have you tried this drink? Give us a review </h3>
<%= link_to "Write a Review", new_cocktail_review_path(@cocktail) %>

</div>
</div>




</div>



</div>
