
<div class="cock-banner" style="background-image: linear-gradient(rgba(0,0,0,0.2), rgba(0,0,0,0.1)), url('<%= cl_image_path @cocktail.photo.key, height: 300, width: 400, crop: :fill %>')">
  <h2> <%= @cocktail.name %> </h2>
</div>

  <div class="container mt-5">
<div class="row">
    <div class="container d-flex mb-5 justify-content-between">

      <div class="cocktail-info">
        <div class="cocktail-content mb-3 text-center">
                <i class="fas fa-quote-right"></i>
                <h1> <%= @cocktail.content %></h1>
        </div>
<!--               <h2> <%= @cocktail.category %> </h2>
 -->     <div class="cocktail-ingredients text-center">
           <h3>Ingredients</h3>
           <% if @dose.nil? %>
           <h2>nothing yet</h2>
           <% else %>
            <%= render 'doses/dose_info' %>
            <% end %>
         </div>
      </div>

      <div class="mix-box">
        <h2> How do you mix it? </h2>
        <%= render 'doses/new' %>
      </div>

   </div>
</div>
<div class="row">

   <div class="container d-flex mb-5 justify-content-between">

<div class="reviews-info text-center">
        <% if @review.nil? %>
          <h2> no reviews yet</h2>
          <% else %>
          <%= render 'reviews/review_info' %>
          <% end %>
</div>

      <div class="mix-">
        <h3>Have you tried this drink? Give us a review </h3>
         <%= render 'reviews/new_cocktail_review' %>
      </div>

   </div>


</div>
<%= link_to 'Back', :back %>



</div>









