<div class="container p-5 sharing-simple-form">


      <%= simple_form_for(@cocktail) do |f| %>
        <%= f.input :name %>
        <%= f.input :category, label: "Choose a category", as: :select, collection: Cocktail::CATEGORY %>
        <%= f.input :content, label: "Share a short description of your cocktail" %>
        <%= f.input :photo, as: :file, label: "Add a nice picture" %>
        <%= f.button :submit, "Share it", class: "btn rounded btn-lg btn-primary" %>

    <% end %>

</div>


