<div class="cards">
  <% if @cocktails.empty? %>
  <h3> no cocktails yet ðŸ˜­ </h3>
  <% else %>
      <% @cocktails.each do |cocktail| %>
      <div class="card-trip">
          <% if cocktail.photo.attached? %>
          <%= cl_image_tag cocktail.photo.key, class: "card-img"  %>
          <% else %>
          <h4> no pics </h4>
          <% end %>
          <div class="card-trip-infos">
            <div>
          <h2><%= link_to cocktail.name, cocktail_path(cocktail) %></h2>
          <p> <%= cocktail.content %></p>

         <!--  <p> <%= cocktail.reviews.count %></p> -->
 <%= pluralize cocktail.reviews.count, "Review" %>

        </div>
          </div>
      </div>
      <% end %>
      <% end %>
</div>
